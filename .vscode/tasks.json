{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run TypeScript File",
      "type": "shell",
      "command": "npx",
      "args": ["ts-node", "${file}"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}